subpackage = meshio
include $(top_srcdir)/subpackage.am
include $(top_srcdir)/modulesrc/module.am

subpkgpyexec_LTLIBRARIES = _meshiomodule.la

subpkgpyexec_PYTHON = meshio.py

swig_sources = \
	meshio.i \
	MeshIOObj.i \
	MeshIOAscii.i \
	MeshIOLagrit.i \
	MeshIOCubit.i \
	FieldFilter.i \
	FieldFilterNone.i \
	FieldFilterProject.i \
	OutputTrigger.i \
	OutputTriggerStep.i \
	OutputTriggerTime.i \
	DataWriter.i \
	DataWriterVTK.i \
	OutputManager.i \
	OutputSolnBoundary.i \
	OutputSolnPoints.i \
	../utils/PyreComponent.i \
	../feassemble/Observer.i \
	OutputManager.i \
	OutputSoln.i \
	OutputIntegrator.i \
	OutputConstraint.i

swig_generated = \
	meshio_wrap.cxx \
	meshio.py

_meshiomodule_la_LDFLAGS = -module -avoid-version \
	$(AM_LDFLAGS) $(PYTHON_LA_LDFLAGS)

dist__meshiomodule_la_SOURCES = $(swig_sources) $(swig_generated)

_meshiomodule_la_LIBADD = \
	$(top_builddir)/libsrc/pylith/libpylith.la \
	-lspatialdata \
	$(PETSC_LIB) \
	$(PYTHON_BLDLIBRARY) $(PYTHON_LIBS) $(PYTHON_SYSLIBS)
if ENABLE_CUBIT
  _meshiomodule_la_LIBADD += -lnetcdf
endif

if ENABLE_SWIG
$(srcdir)/meshio_wrap.cxx $(srcdir)/meshio.py: $(swig_sources)
	$(SWIG) $(PETSC_CC_INCLUDES) $(PYLITH_SWIG_CPPFLAGS) -Wall -c++ -python $<
endif

if ENABLE_HDF5
  swig_sources += \
	DataWriterHDF5.i \
	DataWriterHDF5Ext.i
endif


MAINTAINERCLEANFILES = \
	$(srcdir)/meshio_wrap.cxx \
	$(srcdir)/meshio.py


